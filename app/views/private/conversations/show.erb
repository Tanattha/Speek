<div class="container container-body py-5 px-4">
  <div class="row">
    <h2>Conversation with </h2>
  </div>
  <div class="card-group">
    SIDEBAR GOES HERE!
    <div class="col-xl-8">
      <section class="my-4">
        <% @conversation.messages.each do |msg| %>
          <div class="row">
          <% if msg.user.avatar.presence %>
            <%= image_tag msg.user.avatar.variant(resize_to_limit: [40, 40]), class: "card-img-80 d-flex rounded-circle z-depth-1 mr-3" %>
          <% else %>
            <img class="card-img-40 d-flex z-depth-1 mr-3" src="https://mdbootstrap.com/img/Photos/Avatars/img%20(8).jpg" alt="Generic placeholder image">
          <% end %>
            <%= msg.user.username %>
            <br>
            <%= msg.body %>
          </div>
          

        <% end %>
    </div>
  </div>
</div>