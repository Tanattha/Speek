<div class="container container-body py-5 px-4">
  <div class="card-group">
    <%= render partial: "users/user_card", locals: {user: current_user} %>
    <div class="col-xl-8">
      <section class="my-4">
      <div class="col-xl-8">
        <h2>Welcome back, <%= current_user.name.split(' ')[0] %>! </h2>
        <h4>Here's what your friends are up to...</h4>
        <% dashboard_activity_posts(current_user).each do |post| %>
          <div class="media mt-4 mb-3 px-1 text-md-left border-1">
            <% if post.user.avatar.presence %>
              <%= image_tag post.user.avatar.variant(resize_to_limit: [80, 80]), class: "card-img-80 d-flex rounded-circle z-depth-1 mr-3" %>
            <% else %>
              <img class="card-img-80 d-flex rounded-circle z-depth-1 mr-3" height="80" width="80" src="https://mdbootstrap.com/img/Photos/Avatars/img%20(8).jpg" alt="Generic placeholder image">
            <% end %>
            <div class="media-body ml-2 mt-1">
              <h5 class="font-weight-bold mt-0 mb-0">
                <a href="">@<%= post.user.username %></a>
              </h5>
              <p class="mt-2"><%= raw(truncate(post.body, length: 500)) %></p>
              <div class="row" style="background: #f9f9f9; padding-top: 5px; padding-bottom: 5px; margin-left: 1px; margin-right: 1px;">
                <small class="blue-grey-text pl-3">
                  Posted <%= post.created_at.strftime("%B %e at %H:%M") %>
                  <% if post.community %>
                    in <%= link_to post.community.name, community_path(post.community) %><a class="pl-3"><i class="fas fa-comment-dots"></i> Reply</a><a class="pl-3"><i class="fas fa-quote-right"></i> Quote/Repost</a>
                  <% else %>
                    in Global <a class="pl-3"><i class="fas fa-comment-dots"></i> Reply</a><a class="pl-3"><i class="fas fa-quote-right"></i> Quote/Repost</a>
                  <% end %>
                </small>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
