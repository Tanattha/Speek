  
<div class="col-xl-4">
  <!-- Card -->
  <div class="card card-cascade wider reverse">
    <!-- Card image -->
    <div class="view view-cascade overlay">
      <img class="card-img-top" src="https://mdbootstrap.com/img/Photos/Slides/img%20(70).jpg"
          alt="Card image cap">
      <a href="#!">
        <div class="mask rgba-white-slight"></div>
      </a>
    </div>
    <!-- Card content -->
    <div class="card-body card-body-cascade text-center">
      <!-- Title -->
      <h4 class="card-title mb-0">
        <strong>@<%= user.username %></strong>
      </h4>
      <% if is_admin?(user) %>
          <span class="badge badge-pill badge-success mt-0 mb-2 z-depth-0">Admin</span>
      <% end %>
      <!-- Subtitle -->
      
      <!-- Text -->
      <p class="card-text">
        <%= user.bio %>
      </p>
      <% if current_user %>
        <% if is_following?(user) %>
          <p><%= link_to "Unfollow", user_unfollow_path(user), class: "btn btn-danger btn-sm btn-block" %></p>
        <% elsif current_user.id == user.id %>
          
        <% else%>
          <p><%= link_to "Follow", user_follow_path(user), class: "btn btn-primary btn-sm btn-block" %></p>
        <% end %>
      <% end %>

        <% if user.facebook_url %>
          <a class="px-2 fa-lg fb-ic"><i class="fab fa-facebook-f"></i></a>
        <% end %>
        <% if user.twitter_url %>
          <a class="px-2 fa-lg tw-ic"><i class="fab fa-twitter"></i></a>
        <% end %>
        <% if user.website_url %>
          <a class="px-2 fa-lg li-ic"><i class="fab fa-globe"></i></a>
        <% end %>
      
    </div>
  </div>
  <!-- Card -->
  <!-- Card -->
  <div class="card card-cascade wider mt-3">
    <!-- Card image -->
    <div class="view view-cascade gradient-card-header peach-gradient">
      <!-- Title -->
      <h2 class="card-header-title my-4 white-text mx-auto text-center"><strong><%= number_to_human(user.followers.count) %></strong> <small class="mb-0">Followers</small></h2>
      <!-- Text -->
    </div>
  </div>
  <!-- Card -->
  <!-- Card -->
  <div class="card card-cascade wider mt-3">
    <!-- Card image -->
    <div class="view view-cascade gradient-card-header aqua-gradient">
      <!-- Title -->
      <h2 class="card-header-title my-4 white-text mx-auto text-center"><strong><%= number_to_human(user.following.count) %></strong> <small class="mb-0">Following</small></h2>
      <!-- Text -->
    </div>
  </div>
  <!-- Card -->
  <!-- Card -->
  <!-- Card -->
  <div class="card card-cascade wider mt-3">
    <!-- Card image -->
    <div class="view view-cascade gradient-card-header purple-gradient">
      <!-- Title -->
      <h2 class="card-header-title my-4 white-text mx-auto text-center"><strong><%= number_to_human(user.community_memberships.count) %></strong> <small class="mb-0"> Memberships</small></h2>
      <!-- Text -->
    </div>
  </div>
  <!-- Card -->
</div>
