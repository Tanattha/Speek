<%= form_with model: @user, class: "form-signin" do |f| %>
      
      <img class="mb-4" src="https://getbootstrap.com/docs/4.5/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
      
      <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
      <%= label_tag :username, "Username", class: "sr-only" %>
      <%= f.text_field :username, class: "form-control", placeholder: "Username" %>
      <%= label_tag :password, "Password", class: "sr-only" %>
      <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
      
      <div class="checkbox mb-3">
        <label>
          <input class="mr-3" type="checkbox" value="remember-me"> Remember me</input>
        </label>
      </div>

      <%= f.submit "Sign-in", :class => "btn btn-primary mb-3" %>
      <br>
      <p class="mt-5 mb-3 text-muted">&copy; 2017-2020</p>
      <% end %>
