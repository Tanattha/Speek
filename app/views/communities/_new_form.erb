
<%= form_with model: community, local: true do |f| %>
<div class="row">
  <div class="col-md-6">
    <div class="form-group mx-auto text-center">
      <div class="row mx-auto">
        <%= label_tag :avatar, "Avatar", class: "mt-4 mx-auto" %>
        <%= f.file_field :avatar, class: "form-control-file mx-auto mb-4" %>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="form-group mx-auto text-center">
      <div class="row mx-auto">
        <%= label_tag :header_image, "Header Image", class: "mt-4 mx-auto" %>
        <%= f.file_field :header_image, class: "form-control-file mx-auto mb-4" %>
      </div>
    </div>
  </div>
</div>

  <div class="form-field">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control form-control-lg" %>
  </div>

  <div class="form-field mt-3">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control form-control-lg", rows: "7" %>
  </div>

  <div class="form-field float-right mt-2">
    <%= f.submit "Submit", :class => "btn btn-primary" %>
  </div>
<% end %>
